---
import "../styles/global.css";           // ✅ bundle CSS via Vite
const { title = 'MVL' } = Astro.props;
const base = import.meta.env.BASE_URL;   // e.g. "/mvl-astro-site/"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <nav class="nav container" aria-label="Primary">
        <a href={base} class={Astro.url.pathname === base ? 'active' : ''}>Home</a>
        <a href={`${base}people`} class={Astro.url.pathname.startsWith(`${base}people`) ? 'active' : ''}>People</a>
        <a href={`${base}research`} class={Astro.url.pathname.startsWith(`${base}research`) ? 'active' : ''}>Research</a>
        <a href={`${base}news`} class={Astro.url.pathname.startsWith(`${base}news`) ? 'active' : ''}>News</a>
        <a href={`${base}data`} class={Astro.url.pathname.startsWith(`${base}data`) ? 'active' : ''}>Data</a>
        <a href={`${base}opportunities`} class={Astro.url.pathname.startsWith(`${base}opportunities`) ? 'active' : ''}>Opportunities</a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="container">
      <div>
        <strong>Machine Vision Lab • MVL</strong>
        <div class="small">School of Computing & Information Systems, The University of Melbourne</div>
      </div>
      <div class="small">© {new Date().getFullYear()}</div>
    </footer>
  </body>
</html>
