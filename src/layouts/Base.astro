---
const { title = 'MVL' } = Astro.props;
const base = import.meta.env.BASE_URL;   // ✅ '/mvl-astro-site/'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href={`${base}style.css`} />
  </head>
  <body>
    <header class="header">
      <nav class="nav container" aria-label="Primary">
      <a href={base}>Home</a>
      <a href={`${base}people`}>People</a>
      <a href={`${base}research`}>Research</a>
      <a href={`${base}news`}>News</a>
      <a href={`${base}data`}>Data</a>
      <a href={`${base}opportunities`}>Opportunities</a>
      </nav>

    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="container">
      <div><strong>Machine Vision Lab • MVL</strong><div class="small">School of Computing & Information Systems, The University of Melbourne</div></div>
      <div class="small">© {new Date().getFullYear()}</div>
    </footer>
  </body>
</html>
